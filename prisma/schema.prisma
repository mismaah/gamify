// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client"
    output   = "./generated"
}

datasource db {
    provider = "postgresql"
}

model Audit {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    model     String
    action    String
    args      String
    result    String
}

model Item {
    id          Int      @id @default(autoincrement())
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    name        String
    description String
    rates       Rate[]
    usage       Use[]
}

model Rate {
    id        Int       @id @default(autoincrement())
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    itemId    Int
    item      Item      @relation(fields: [itemId], references: [id])
    from      DateTime
    to        DateTime?
    value     Float
    unit      String

    @@index([itemId, from, to])
}

model Use {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    itemId    Int
    item      Item     @relation(fields: [itemId], references: [id])

    @@index([itemId, createdAt])
}
